<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="thomasfleet.report_styles" name="Report Styles" inherit_id="web.report_assets_common">
        <xpath expr="link[last()]" position="after">
            <link href="/thomasfleet/static/src/less/report.less" rel="stylesheet" type="text/less"/>
        </xpath>
    </template>
    <template id="thomasfleet.home_depot_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" style="page-break-after:always;page-break-inside:avoid">
                            <div class="row">
                               <h1 class="text-center">Invoice</h1>
                            </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <b>Lease #:</b>
                                <t t-esc="doc.lease_number"/>
                                <br/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <b>Lease Start Date:</b>
                                <t t-esc="doc.lease_start_date"/>
                            </div>
                            <div class="col-xs-2">
                                <b>Unit #:</b>
                                <t t-esc="doc.vehicle_id.unit_no"/>
                            </div>
                            <div class="col-xs-2">
                                <b>Purchase Order #:</b>
                                <t t-esc="doc.po_number"/>
                            </div>

                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-xs-3">
                                <h3>Customer Information</h3>
                            </div>
                            <div class="col-xs-3">
                                <h3>Contacts</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <b>Customer Name:</b>
                                <t t-esc="doc.customer_id.name"/>
                                <br/>
                                <b>Address:</b>
                                <t t-esc="doc.customer_id.street"/>
                                <br/>
                                <t t-esc="doc.customer_id.street2"/>
                                <br/>
                                <b>City:</b>
                                <t t-esc="doc.customer_id.city"/>
                                <br/>
                                <b>Province:</b>
                                <t t-esc="doc.customer_id.state_id.name"/>
                                <br/>
                                <b>Postal Code:</b>
                                <t t-esc="doc.customer_id.zip"/>
                                <br/>
                            </div>
                            <div class="col-xs-2">
                                <b>Driver:</b>
                                <p>
                                    <b>Name:</b>
                                    <t t-esc="doc.driver_id.name"/>
                                    <br/>
                                    <b>Phone:</b>
                                    <t t-esc="doc.driver_id.phone"/>
                                    <br/>
                                    <b>License #:</b>
                                    <t t-esc="doc.driver_id.drivers_license"/>
                                    <br/>
                                    <b>Expires:</b>
                                    <t t-esc="doc.driver_id.drivers_license_expiry"/>
                                    <br/>
                                </p>
                            </div>
                            <div class="col-xs-2">
                                <b>Invoicing Contacts:</b>
                                <t t-foreach="doc.ap_contact_ids" t-as="contact">
                                    <p>
                                        <b>Name:</b>
                                        <t t-esc="contact.name"/><br/>
                                        <b>Phone:</b>
                                        <t t-esc="contact.phone"/>
                                    </p>
                                </t>
                            </div>
                            <div t-if="doc.po_contact_ids" class="col-xs-2">
                                <b>Purchasing Contacts:</b>
                                <t t-foreach="doc.po_contact_ids" t-as="contact">
                                    <p>
                                        <b>Name:</b>
                                        <t t-esc="contact.name"/><br/>
                                        <b>Phone:</b>
                                        <t t-esc="contact.phone"/>
                                    </p>
                                </t>
                            </div>
                            <div t-if="doc.ops_contact_ids" class="col-xs-2">
                                <b>Operations Contacts:</b>
                                <t t-foreach="doc.ops_contact_ids" t-as="contact">
                                    <p>
                                        <b>Name:</b>
                                        <t t-esc="contact.name"/><br/>
                                        <b>Phone:</b>
                                        <t t-esc="contact.phone"/>
                                    </p>
                                </t>
                            </div>


                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <h3>Vehicle Information</h3>
                            </div>
                            <div class="col-xs-4">
                                <h3>Inclusions and Accessories</h3>
                            </div>
                            <div class="col-xs-3">
                                <h3>Notes</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <b>Unit #:</b>
                                <t t-esc="doc.vehicle_id.unit_no"/>
                                <br/>
                                <b>Make:</b>
                                <t t-esc="doc.vehicle_id.brand_id.name"/>
                                <br/>
                                <b>Style:</b>
                                <t t-esc="doc.vehicle_id.trim_id.name"/>
                                <br/>
                            </div>
                            <div class="col-xs-3">
                                <b>Year:</b>
                                <t t-esc="doc.vehicle_id.model_year"/>
                                <br/>
                                <b>Model:</b>
                                <t t-esc="doc.vehicle_id.model_id.name"/>
                                <br/>
                                <b>VIN:</b>
                                <t t-esc="doc.vehicle_id.vin_id"/>
                                <br/>
                            </div>
                            <div class="col-xs-4">

                                <t t-foreach="doc.vehicle_id.inclusions" t-as="inclusion">

                                    <span>
                                        <t t-esc="inclusion.name"/>
                                    </span>
                                    <br/>

                                </t>
                                <t t-foreach="doc.vehicle_id.accessories" t-as="accessory">
                                    <span t-if="accessory.name == 'Transponder'">
                                        <span>407 Transponder:
                                            <t t-esc="doc.transponder_id.unit_no"/>
                                            <br/>
                                        </span>

                                    </span>
                                    <span t-else="">
                                        <t t-esc="accessory.name"/>
                                        <br/>
                                    </span>
                                </t>

                            </div>
                            <div class="col-xs-3">
                                <b>Additional Charges:</b>
                                <t t-esc="doc.additional_charges"/>
                                <br/>

                                <b>Contract #:</b>
                                <t t-esc="doc.contract_number"/>
                                <br/>
                                <b>Purchase Order Comments:</b>
                                <t t-esc="doc.po_comments"/>
                                <br/>
                                <b>Preferred Payment:</b>
                                <t t-esc="doc.preferred_payment"/>
                                <br/>
                                <b>Additional Billing Notes:</b>
                                <t t-esc="doc.additional_billing"/>
                                <br/>
                                <b>Billing Notes:</b>
                                <t t-esc="doc.billing_notes"/>
                                <br/>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-xs-4">
                                <h3>Lease Rates</h3>
                            </div>
                        </div>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Tax</th>
                                    <th>Tax Amount</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.lease_lines" t-as="line">
                                    <td>
                                        <t t-esc="line.description"/>
                                    </td>
                                    <td>
                                        <t t-esc="'%.2f'%(line.price)"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.tax_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="'%.2f'%(line.tax_amount)"/>
                                    </td>
                                    <td>
                                        <t t-esc="'%.2f'%(line.total)"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <p class="text-right">
                                            <b>Sub Total:</b>
                                        </p>
                                        <p class="text-right">
                                            <b>Tax:</b>
                                        </p>
                                        <p class="text-right">
                                            <b>Total Rate:</b>
                                        </p>
                                    </td>
                                    <td>
                                        <p>
                                            <t t-esc="'%.2f'%(doc.monthly_rate)"/>
                                        </p>
                                        <p>
                                            <t t-esc="'%.2f'%(doc.monthly_tax)"/>
                                        </p>
                                        <p>
                                            <t t-esc="'%.2f'%(doc.monthly_total)"/>
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                        <div class="page" style="page-break-after:always;page-break-inside:avoid">
                        <div class="row">
                            <div class="col-xs-4">
                                <h3>Physical Condition</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">Outgoing Inspection by:
                                <t t-esc="doc.outgoing_inspector.name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <span t-if="doc.vehicle_id.asset_class.name == 'VAN'">
                                    <img  width="100%" src="/thomasfleet/static/src/img/cube_van.png"/>
                                </span>
                                <span t-if="doc.vehicle_id.asset_class.name == 'UTC'">
                                    <img  width="100%" src="/thomasfleet/static/src/img/cube_van.png"/>
                                </span>
                                <span t-else="">
                                    <img width="100%" src="/thomasfleet/static/src/img/pick_up.png"/>
                                </span>
                            </div>
                            <div class="col-xs-4">
                                <dl class="row">
                                    <dt class="col-md-4"><b>Spare Key Initials: </b></dt>
                                    <dd class="col-xs-4"><hr/></dd>
                                </dl>
                                <b>Outgoing Mileage:</b>
                                <t t-esc="doc.mileage_at_lease"/>
                                KM
                                <br/>
                                <b>Fuel:</b>
                                <t t-esc="doc.fuel_at_lease"/>
                                <br/>
                                <b>Lease Notes:</b>
                                <t t-esc="doc.lease_notes"/>
                                <br/>
                                <b>Inspection Notes:</b>
                                <t t-esc="doc.inspection_notes"/>
                                <br/>
                            </div>

                        </div>
                    </div>
                        <div class="page" style="page-break-after:always;page-break-inside:avoid">
                        <div class="row">
                            <div class="col-xs-4">
                                <h3>Terms and Conditions</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <p>A) Rental Period is from:
                                    <t t-esc="doc.lease_start_date"/>
                                    to:
                                    <t t-esc="doc.min_lease_end_date"/>
                                    or longer. Billing Start date is:
                                    <t t-esc="doc.billing_start_date"/>
                                    <br/>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <p>B) Customer is responsible for Insurance</p>
                            </div>
                        </div>
                        <dl class="row">
                            <dt class="col-xs-3">Insurance Information</dt>
                            <dd class="col-xs-3">
                                <p t-if="doc.customer_id.insurance_on_file">
                                    <b>Proof of Insurance on File:</b>
                                    Yes
                                </p>
                                <p t-else="">
                                    <b>Proof of Insurance on File:</b>
                                    No
                                </p>
                                <p>
                                    <b>Agent:</b>
                                    <t t-esc="doc.customer_id.insurance_agent"/>
                                </p>
                                <p>
                                    <b>Underwriter:</b>
                                    <t t-esc="doc.customer_id.insurance_underwriter"/>
                                </p>
                                <p>
                                    <b>Policy #:</b>
                                    <t t-esc="doc.customer_id.insurance_policy"/>
                                </p>
                                <p>
                                    <b>Expiration Date:</b>
                                    <t t-esc="doc.customer_id.insurance_expiration"/>
                                </p>
                            </dd>
                        </dl>
                        <div class="row">
                            <div class="col-xs-6">
                                <p>C) Monthly rate <b>does not</b> include towing charges for
                                    vehicle in case of breakdown
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <p>D) Customer responsible for all damage regardless of fault
                                    (including tires)
                                </p>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-xs-6">
                                <p>E) It is the customer's responsibility to bring the
                                    vehicle to the shop for service
                                </p>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-xs-6">
                                <p>F) Please note tht the "normal allotted" mileage is
                                    <t t-esc="doc.monthly_mileage"/>
                                    per month. Any
                                    additional mileage will be incur a $
                                    <t t-esc="doc.mileage_overage_rate"/>
                                    charge/km
                                </p>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-xs-6">
                                <p>G) Delivery Charge: $
                                    <t t-esc="doc.delivery_charge"/>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <p>Other:
                                    <hr/>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                             <div class="col-xs-4">
                                <h3>Signatures</h3>
                            </div>
                        </div>
                        <div class="justify_content_start row no_gutters">
                            <div class="col-xs-3">Customer Name (print):</div>
                            <div class="col-xs-3 text-left">
                                <hr/>
                            </div>
                            <div class="col-xs-1">Date:</div>
                            <div class="col-xs-2 text-left">
                                <hr/>
                            </div>
                        </div>
                        <div class="justify_content_start row no_gutters">
                            <div class="col-xs-3">Customer Signature:</div>
                            <div class="col-xs-3 text-left">
                                <hr/>
                            </div>
                            <div class="col-xs-1">Date:</div>
                            <div class="col-xs-2 text-left">
                                <hr/>
                            </div>

                        </div>
                        <div class="justify_content_start row no_gutters">
                            <div class="col-xs-3">Thomas Solutions Signature:</div>
                            <div class="col-xs-3 text-left">
                                <b><hr/></b>
                            </div>
                            <div class="col-xs-1">Date:</div>
                            <div class="col-xs-2 text-left">
                                <hr/>
                            </div>
                        </div>
                    </div>
                        <div class="page" style="page-break-after:always;page-break-inside:avoid">
                        <div class="row">
                            <div class="col-xs-4">
                                <h3>Lease Return</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <b>Return Date:</b>
                                <t t-esc="doc.lease_return_date"/>

                            </div>
                            <div class="col-xs-4">
                                <b>Unit # :</b>
                                <t t-esc="doc.vehicle_id.unit_no"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <h3>Physical Condition</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">Return Inspection by:
                                <t t-esc="doc.incoming_inspector.name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <span t-if="doc.vehicle_id.asset_class.name == 'VAN'">
                                    <img with="100%" src="/thomasfleet/static/src/img/cube_van.png"/>
                                </span>
                                <span t-if="doc.vehicle_id.asset_class.name == 'UTC'">
                                    <img width="100%" src="/thomasfleet/static/src/img/cube_van.png"/>
                                </span>
                                <span t-else="">
                                    <img width="100%" src="/thomasfleet/static/src/img/pick_up.png"/>
                                </span>
                            </div>
                            <div class="col-xs-4">
                                <dl class="row">
                                    <dt class="col-md-4"><b>Spare Key Initials: </b></dt>
                                    <dd class="col-xs-4"><hr/></dd>
                                </dl>
                                <b>Mileage:</b>
                                <!--<t t-esc="doc.mileage_at_return"/>
                                KM-->
                                <br/>
                                <b>Fuel:</b>
                                <!--<t t-esc="doc.fuel_at_lease"/>-->
                                <br/>
                                <b>Lease Notes:</b>
                                <t t-esc="doc.lease_notes"/>
                                <br/>
                                <b>Inspection Notes:</b>
                                <t t-esc="doc.inspection_notes"/>
                                <br/>
                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>