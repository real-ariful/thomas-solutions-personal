<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-screen')]//div[hasclass('screen-content')]//div[hasclass('main-content')]//div[hasclass('left-content')]//div[hasclass('paymentmethods-container')]//div[hasclass('paymentmethods')]" position="replace">
            <div class="paymentmethods">
                <t t-foreach="payment_methods_from_config" t-as="paymentMethod" t-key="paymentMethod.id">
                    <t t-if="env.pos.get_order().get_client().property_supplier_payment_term_name"/>
                    <t t-if="env.pos.get_order().get_client().property_supplier_payment_term_name=='Immediate Payment'">
                        <t t-if="paymentMethod.name and !paymentMethod.hide_method">
                            <PaymentMethodButton paymentMethod="paymentMethod" />
                        </t>
                        <t/>
                    </t>
                    <t t-else="">
                        <PaymentMethodButton paymentMethod="paymentMethod" />
                    </t>
                </t>
            </div>
        </xpath>

    </t>

</templates>