<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="thomaslease_message_view" model="ir.ui.view">
            <field name="name">thomaslease.message.form</field>
            <field name="model">thomaslease.message</field>
            <field name="arch" type="xml">
                <form string="Information">
                    <field name="message" />
                    <footer>
                        <button type="object" name="ok_pressed" string="OK" class="btn-primary"/>
                        <button type="object" name="cancel_pressed" string="Cancel" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id='message_action' model='ir.actions.act_window'>
            <field name="name">Message</field>
            <field name="res_model">thomaslease.message</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>