<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <!-- <xpath expr="//div[@name='invoice_address']" position="replace"> -->
    <template id="report_invoice_document_inherit_thomas" inherit_id="account.report_invoice_document">
        <xpath expr="//address" position="replace">
            <div class="col-xs-12">
                <div name="address" class="pull-left">
                    <strong>Billing address:</strong>
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>:<span t-field="o.partner_id.vat"/>
                    </div>
                </div>

                <div t-if="o.partner_shipping_id and (o.partner_shipping_id != o.partner_id)" class="pull-right">
                    <strong>Shipping address:</strong>
                    <address t-field="o.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                </div>

            </div>
        </xpath>

        <xpath expr="//div[@t-if='o.invoice_date']" position="before">
            <div class="col-xs-2" t-if="o.po_number">
                <strong>Purchase Order:</strong>
                <p t-field="o.po_number"/>
            </div>
        </xpath>

        <xpath expr="//div[@t-if='o.invoice_date']" position="after">
            <div class="col-xs-2">
                <strong><t t-esc="res_company.country_id.vat_label or 'TIN'"/></strong>
                <span t-field="res_company.vat"/>
            </div>
        </xpath>
        
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <table class="table table-condensed" name="invoice_line_table">
                <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Description</th>
                        <th class="hidden">Source Document</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" class="text-right">Disc.(%)</th>
                        <th class="text-right">Taxes</th>
                        <th class="text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <td>
                            <span t-field="l.ref"></span>
                        </td>
                        <td>
                            <span t-field="l.name"/>
                        </td>
                        <td class="hidden">
                            <span t-field="l.invoice_origin"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id" groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td t-if="display_discount" class="text-right">
                            <span t-field="l.discount"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                        </td>
                        <td class="text-right" id="subtotal">
                            <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                    <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l">
                        <td t-translation="off">&amp;nbsp;</td>
                        <td class="hidden"></td>
                        <td></td>
                        <td></td>
                        <td t-if="display_discount"></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>

    
    <template id="thomasfleet.invoice_footer" inherit_id="web.external_layout_standard">
            <xpath expr="//div[contains(@t-attf-class, 'footer')]" position="replace">
            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center">
                    <div t-if="doc_model=='account.move'" t-field="company.report_footer"/>
                </div>
                <div class="text-center">
                    <ul t-if="doc_model=='account.move'" class="list-inline">
                        <li t-if="company.phone">
                            <i class="fa fa-phone"/>
                            <span t-field="company.phone"/>
                        </li>
                        <li t-if="company.email">
                            <i class="fa fa-envelope"/>
                            <span t-field="company.email"/>
                        </li>
                        <li t-if="company.website">
                            <i class="fa fa-globe"/>
                            <span t-field="company.website"/>
                        </li>
                    </ul>
                    <ul t-if="doc_model=='thomaslease.lease'" class="list-inline">
                        <li>
                            <i class="fa fa-phone"/>
                            <span> 905-545-8808 ext.7234</span>
                        </li>
                        <li>
                            <i class="fa fa-envelope"/>
                            <span> rentals@thomassolutions.ca</span>
                        </li>
                        <li t-if="company.website">
                            <i class="fa fa-globe"/>
                            <span t-field="company.website"/>
                        </li>
                    </ul>
                </div>
                <div class="text-muted">
                        Page:
                    <span class="page"/>
                        of
                    <span class="topage"/>
                </div>
            </div>

        </xpath>
    </template>
</odoo>
